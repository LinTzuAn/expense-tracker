<a href="/records/new" class="btn btn-primary mb-3">Create</a>
<ul class="list-group">
  {{#each records}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto me-auto d-flex align-items-center">
        <h4 style="display: inline; margin-bottom: 0px; margin-left: 10px;">
          {{this.name}}
        </h4>
      </div>
      <div class="col-auto">
        <a class="btn btn-success" href="/records/{{ this._id }}/edit">edit</a>
        <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
          <button class="btn btn-danger" type="submit">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>